# job_runs/cdvae_benchmark_alex/Snakefile
rule train_cdvae_alex:
    output:
        touch("sentinels/cdvae_benchmark_alex.trained")
    input:
        "sentinels/cdvae_env.created",
        "sentinels/alex_data.created"
    shell:
        """
        sbatch --wait job_runs/cdvae_benchmark_alex/train_cdvae.job
        """

rule infer_cdvae_alex:
    output:
        touch("sentinels/cdvae_benchmark_alex.inferred")
    input:
        "sentinels/cdvae_env.created",
        "sentinels/alex_data.created",
        "sentinels/cdvae_benchmark_alex.trained"
    shell:
        """
        sbatch --wait job_runs/cdvae_benchmark_alex/inference_cdvae.job
        """

rule benchmark_cdvae_alex:
    output:
        touch("sentinels/cdvae_benchmark_alex.final")
    input:
        "sentinels/cdvae_env.created",
        "sentinels/alex_data.created",
        "sentinels/cdvae_benchmark_alex.trained",
        "sentinels/cdvae_benchmark_alex.inferred"
    shell:
        """
        sbatch --wait job_runs/cdvae_benchmark_alex/benchmark_cdvae.job
        """

