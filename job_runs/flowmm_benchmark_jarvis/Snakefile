# job_runs/flowmm_benchmark_jarvis/Snakefile
rule train_flowmm_jarvis:
    output:
        touch("sentinels/flowmm_benchmark_jarvis.trained")
    input:
        "sentinels/flowmm_env.created",
        "sentinels/jarvis_data.created",
        "sentinels/flowmm_yamls.created"
    shell:
        """
        sbatch --wait job_runs/flowmm_benchmark_jarvis/train_flowmm.job
        """

rule infer_flowmm_jarvis:
    output:
        touch("sentinels/flowmm_benchmark_jarvis.inferred")
    input:
        "sentinels/flowmm_env.created",
        "sentinels/jarvis_data.created",
        "sentinels/flowmm_benchmark_jarvis.trained",
        "sentinels/flowmm_yamls.created"
    shell:
        """
        sbatch --wait job_runs/flowmm_benchmark_jarvis/inference_flowmm.job
        """

rule benchmark_flowmm_jarvis:
    output:
        touch("sentinels/flowmm_benchmark_jarvis.final")
    input:
        "sentinels/flowmm_env.created",
        "sentinels/jarvis_data.created",
        "sentinels/flowmm_benchmark_jarvis.trained",
        "sentinels/flowmm_benchmark_jarvis.inferred",
        "sentinels/flowmm_yamls.created"
    shell:
        """
        bash job_runs/flowmm_benchmark_jarvis/write_benchmark.sh
        """

