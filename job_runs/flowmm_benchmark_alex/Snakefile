rule train_flowmm_alex:
    output:
        touch("flowmm_benchmark_alex.trained")
    input:
        "flowmm_env.created",
        "alex_data.created",
        "flowmm_yamls.created"
    shell:
        """
        sbatch --wait -p nvljob_runs/flowmm_benchmark_alex/train_flowmm.job
        """

rule infer_flowmm_alex:
    output:
        touch("flowmm_benchmark_alex.inferred")
    input:
        "flowmm_env.created",
        "alex_data.created",
        "flowmm_benchmark_alex.trained",
        "flowmm_yamls.created"
    shell:
        """
        sbatch --wait -p nvl job_runs/flowmm_benchmark_alex/inference_flowmm.job
        """

rule benchmark_flowmm_alex:
    output:
        touch("flowmm_benchmark_alex.final")
    input:
        "flowmm_env.created",
        "alex_data.created",
        "flowmm_benchmark_alex.trained",
        "flowmm_benchmark_alex.inferred",
        "flowmm_yamls.created"
    shell:
        """
        bash job_runs/flowmm_benchmark_alex/write_benchmark.sh
        """
