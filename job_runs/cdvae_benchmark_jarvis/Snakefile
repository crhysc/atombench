rule train_cdvae_jarvis:
    output:
        touch("cdvae_benchmark_jarvis.trained")
    input:
        "cdvae_env.created",
        "jarvis_data.created"
    shell:
        """
        sbatch --wait -p nvl --time=08:00:00 job_runs/cdvae_benchmark_jarvis/train_cdvae.job
        """

rule infer_cdvae_jarvis:
    output:
        touch("cdvae_benchmark_jarvis.inferred")
    input:
        "cdvae_env.created",
        "jarvis_data.created",
        "cdvae_benchmark_jarvis.trained"
    shell:
        """
        sbatch --wait -p nvl --time=08:00:00 job_runs/cdvae_benchmark_jarvis/inference_cdvae.job
        """

rule benchmark_cdvae_jarvis:
    output:
        touch("cdvae_benchmark_jarvis.final")
    input:
        "cdvae_env.created",
        "jarvis_data.created",
        "cdvae_benchmark_jarvis.trained",
        "cdvae_benchmark_jarvis.inferred"

    shell:
        """
        sbatch --wait -p nvl --time=08:00:00 job_runs/cdvae_benchmark_jarvis/benchmark_cdvae.job
        """
