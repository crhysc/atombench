rule all:
    input:
        "cdvae_benchmark_jarvis.final"

rule train_cdvae_jarvis:
    output:
        touch("cdvae_benchmark_jarvis.trained")
    input:
        "cdvae_env.created",
        "../../tc_supercon/jarvis_data.created"
    shell:
        """
        sbatch train_cdvae.job
        """

rule infer_cdvae_jarvis:
    output:
        touch("cdvae_benchmark_jarvis.inferred")
    input:
        "cdvae_env.created",
        "../../tc_supercon/jarvis_data.created",
        "cdvae_benchmark_jarvis.trained"
    shell:
        """
        sbatch inference_cdvae.job
        """

rule benchmark_cdvae_jarvis:
    output:
        touch("cdvae_benchmark_jarvis.final")
    input:
        "cdvae_env.created",
        "../../tc_supercon/jarvis_data.created",
        "cdvae_benchmark_jarvis.trained",
        "cdvae_benchmark_jarvis.inferred"

    shell:
        """
        sbatch benchmark_cdvae.job
        """
